<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             x:Class="MonedasElongadas.MainPage"
             Title="Listado">
    <!-- Lista de monedas -->
    <CollectionView x:Name="MonedasCollectionView"
                    ItemsLayout="VerticalList"
                    Margin="0,0,0,0"
                    HeightRequest="400"
                    CanReorderItems="True"
                    ReorderCompleted="MonedasCollectionView_ReorderCompleted"
                    >
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Border
                    Stroke="#ffdd00"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 14"
                    Margin="0,0">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnMonedaTapped"/>
                    </Border.GestureRecognizers>
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#e5ff00" Offset="0.0" />
                            <GradientStop Color="#ffc800" Offset="1.0" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid Padding="16,16,16,8" RowSpacing="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <!-- Imagen a la izquierda -->
                        <Image Source="{Binding ImagenSource}"
                               WidthRequest="48"
                               HeightRequest="48"
                               Aspect="AspectFit"
                               Grid.Row="0"
                               Grid.RowSpan="3"
                               Grid.Column="0"
                               VerticalOptions="Center"
                               Margin="0,0,12,0"/>
                        <Label Text="{Binding Titulo}"
                               FontAttributes="Bold"
                               FontSize="20"
                               TextColor="#2d415a"
                               Grid.Column="1"
                               Grid.Row="0"/>
                        <Label Text="{Binding Descripcion}"
                               FontSize="15"
                               TextColor="#4a4a4a"
                               Grid.Column="1"
                               Grid.Row="1"/>
                        <Label Text="{Binding LugarYFecha}"
                               FontSize="13"
                               TextColor="#6c757d"
                               Grid.Column="1"
                               Grid.Row="2"/>

                        <ImageButton Source="trash.png"
                                     BackgroundColor="Transparent"
                                     WidthRequest="1"
                                     HeightRequest="1"
                                     HorizontalOptions="End"
                                     VerticalOptions="Start"
                                     Grid.Row="0"
                                     Grid.Column="2"
                                     Grid.RowSpan="3"
                                     Clicked="BorrarMoneda_Clicked"/>
                    </Grid>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
