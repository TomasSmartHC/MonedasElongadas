<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
            x:Class="MonedasElongadas.MainPage">
    <!-- Lista de monedas -->
    <CollectionView x:Name="MonedasCollectionView"
                        ItemsLayout="VerticalList"
                        Margin="0,16,0,0"
                        HeightRequest="400"
                    CanReorderItems="True"
                    ReorderCompleted="MonedasCollectionView_ReorderCompleted">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Border
                    Stroke="#ffdd00"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 14"
                    Margin="0,16">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#e5ff00" Offset="0.0" />
                            <GradientStop Color="#ffc800" Offset="1.0" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid Padding="16" RowSpacing="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Label Text="{Binding Titulo}"
            FontAttributes="Bold"
            FontSize="20"
            TextColor="#2d415a"
            Grid.Row="0"/>
                        <Label Text="{Binding Descripcion}"
            FontSize="15"
            TextColor="#4a4a4a"
            Grid.Row="1"/>
                        <Label Text="{Binding LugarObtencion}"
            FontSize="13"
            TextColor="#6c757d"
            Grid.Row="2"/>
                        <Label Text="{Binding FechaObtencion, StringFormat='Obtenida: {0:yyyy-MM-dd}'}"
            FontSize="12"
            TextColor="#888"
            Grid.Row="3"/>
                        <Button Text="Borrar"
             BackgroundColor="#ff8c00"
             TextColor="White"
             CornerRadius="8"
             Padding="4,0"
             FontSize="13"
             Grid.Row="6"
             Clicked="BorrarMoneda_Clicked"/>
                    </Grid>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
